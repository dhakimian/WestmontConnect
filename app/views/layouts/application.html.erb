  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<div id="content">
	<div id="queue_nav">
		<ul>
			<li><%= link_to "Queue", "queue" %></li>
			<li><%= link_to "User Directory", "directory" %></li>
			<li><%= link_to "Search", "search" %></li>
			<li><%= link_to "Newsletter", "newsletter" %></li>
		</ul>	
	</div>
	<%= yield %>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
