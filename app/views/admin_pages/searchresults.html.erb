<%= provide(:title, 'Admin Panel | Search Results') %>
	<div id="adminqueue">
		<div>
			<h2>Users</h2>
			<p class="line2">You can search for users to edit content, ban user, or announce the user has passed away.</p>
		</div>
		<div>
			<h3><%= @results_num %> Results for "<%= @params[:title] %>"</h3>
			<%= form_tag 'searchresults' do -%>
			<%= text_field_tag 'title', nil, :maxlength => 1000, :class => "special_text3" %> <%= submit_tag "Search", :class => 'wcbutton' %>
			<% end %>
			<a href="directory" class="wcbutton">Show All Alumni</a>
		</div>
		<div id="searchresults">
		
			<% @users.each do |user| %>
				
			<div class="searched">
					<div class="searched_img">
						<img src="../assets/profile_picture.jpg" alt="profile_picture" width="55" height="54" />
					</div>
					<div class="searched_info">
                                                <h3><%= getname(user) %></h3>
						<p>Majored in <%= user[:major] %></p>
						<p>Class of <%= user[:year] %></p>
					</div>
					<div class="searched_options">
						<ul>
						<li><span><a href="edituser?id=<%= user[:id] %>" class="wcbutton">Edit User</a><span></li>
						<li><a href="" class="wcbutton" data-reveal-id="myModal2">User Died</a> </li>
                                                <li><a href="" class="wcbutton" data-reveal-id="myModal">Ban User</a></li>
						</ul>
					</div>
			</div> <!--div searched closed -->
			
			<% end %>
			
		</div><!-- div searchresults closed -->
		<%= @debug %>
	</div><!-- div adminqueue closed -->
